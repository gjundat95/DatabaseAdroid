<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_student"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/user"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgAvatar"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imgAvatar"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Ngo Doan Tinh" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvName"
        android:layout_toEndOf="@+id/imgAvatar"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="Kinh Mon, Hai Duong"
        android:lines="1"
        android:fontFamily="monospace"
        android:layout_below="@+id/tvName" />

    <TextView
        android:id="@+id/tvBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1995-20-02"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="monospace"
        android:layout_below="@+id/tvAddress"
        android:layout_alignStart="@+id/tvAddress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_height="1px"/>


</RelativeLayout>